<div class="container-fluid mt-5 about-style" id="contactid">
    <div class="row">
        <div class="col-md-10 md-12 mx-auto">
            <h1 class="text-center main-heading">Contact us US</h1>
            <p class="text-center sub-heading">We will be happy to help you</p>
            <div class="row">
                <div class="col-md-6 col-12 mx-auto">
                    <form action="/contact" method="POST">
                        <div class="form-group">
                            <label for="ExampleInputPassword1">Name</label>
                            <input type="text" class="form-control" id="ExampleInputPassword1"
                                placeholder=" Enter your Full Name" name="name">
                        </div>
                        <div class="form-group">
                            <label for="inputPassword4">Email</label>
                            <input type="email" class="form-control" id="inputPassword4" placeholder="Enter your Email"
                                name="email">
                        </div>
                        <div class="form-group">
                            <label for="inputAddress">Phone Number</label>
                            <input type="Number" class="form-control" id="inputAddress"
                                placeholder="Enter your Phone Number" name="phone">
                        </div>
                        <div class="form-group">
                            <label for="inputAddress2">Message</label>
                            <input type="text" class="form-control" id="inputAddress2" placeholder="Enter your Message"
                                name="message">
                        </div>
                        <button type="submit" class="btn-style btn-primary">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>